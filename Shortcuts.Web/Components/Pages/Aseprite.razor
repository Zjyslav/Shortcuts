@page "/Aseprite"
@rendermode InteractiveServer
@inject AsepriteService aseprite
@layout ButtonsPageLayout

<ButtonsContainer Title="Aseprite Shortcuts" Cols="2">
    <ShortucutButton Text="Undo" @onclick="Undo" ColSpan="1" ColorFrom="blue-400" ColorTo="blue-700" />
    <ShortucutButton Text="Redo" @onclick="Redo" ColSpan="1" ColorFrom="red-400" ColorTo="red-700" />
    <ShortucutButton Text="Pencil" @onclick="PencilTool" ColSpan="1" ColorFrom="yellow-400" ColorTo="green-700" />
    <ShortucutButton Text="Eraser" @onclick="Eraser" ColSpan="1" ColorFrom="zinc-300" ColorTo="sky-600" />
    <ShortucutButton Text="Bucket" @onclick="BucketTool" ColSpan="1" ColorFrom="purple-300" ColorTo="violet-600" />
    <ShortucutButton Text="Eyedropper" @onclick="Eyedropper" ColSpan="1" ColorFrom="rose-300" ColorTo="lime-700" />
    <ShortucutButton Text="Clear" @onclick="Clear" ColSpan="2" ColorFrom="amber-400" ColorTo="orange-700" />
    <ShortucutButton Text="Advanced Mode" @onclick="AdvancedMode" ColSpan="1" ColorFrom="teal-400" ColorTo="cyan-600" />
    <ShortucutButton Text="Show Grid" @onclick="Grid" ColSpan="1" ColorFrom="fuchsia-400" ColorTo="orange-600" />
    <ShortucutButton Text="Fit On Screen" @onclick="FitOnScreen" ColSpan="2" ColorFrom="white" ColorTo="stone-700" />
    <ShortucutButton Text="Fullscreen Preview" @onclick="FullscreenPreview" ColSpan="2" ColorFrom="green-400" ColorTo="lime-700" />
</ButtonsContainer>

@code {
    private void Undo() => aseprite.Undo();
    private void Redo() => aseprite.Redo();
    private void PencilTool() => aseprite.PencilTool();
    private void Eraser() => aseprite.Eraser();
    private void Eyedropper() => aseprite.Eyedropper();
    private void BucketTool() => aseprite.BucketTool();
    private void AdvancedMode() => aseprite.AdvancedMode();
    private void Grid() => aseprite.Grid();
    private void FullscreenPreview() => aseprite.FullscreenPreview();
    private void FitOnScreen() => aseprite.FitOnScreen();
    private void Clear() => aseprite.Clear();
}